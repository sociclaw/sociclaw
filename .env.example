# .env.example for SociClaw
# Copy this file to .env and fill in the values

# ===========================================
# X (Twitter) API - Required for trend research
# ===========================================
XAI_API_KEY=your_x_api_bearer_token

# ===========================================
# Image Provider (SociClaw Credits)
# ===========================================
# Your API Key for image generation
SOCICLAW_IMAGE_API_KEY=your_sociclaw_image_api_key
SOCICLAW_IMAGE_MODEL=nano-banana

# SociClaw Provisioning Gateway (Optional)
# ------------------------------------------------------------------------------
# Usage: python -m sociclaw.scripts.cli provision-image-gateway ...
# Public URL used by the skill/bot (API project domain).
SOCICLAW_PROVISION_URL=https://api.sociclaw.com/api/sociclaw/provision

# Optional gateway hardening (API project envs, not user client envs)
# SOCICLAW_RATE_LIMIT_WINDOW_SECONDS=3600
# SOCICLAW_RATE_LIMIT_MAX_PER_IP=20
# SOCICLAW_RATE_LIMIT_MAX_PER_USER=5
# SOCICLAW_RATE_LIMIT_MAX_KEYS=5000
# SOCICLAW_RATE_LIMIT_DISABLED=false

# Optional server-to-server protection.
# Do NOT set this in user-installed client environments unless your backend
# explicitly requires it and you control that client deployment.
# SOCICLAW_INTERNAL_TOKEN=your-internal-secret-token

# Advanced (usually not needed)
# Private upstream endpoint used by /api/sociclaw/provision in the API project.
# SOCICLAW_PROVISION_UPSTREAM_URL=https://<your-upstream>/api/openclaw/provision
#
# Image API base MUST point to the image provider domain (not the provision gateway domain).
# Example:
# SOCICLAW_IMAGE_API_BASE_URL=https://<your-image-api-domain>
# Optional explicit overrides:
# SOCICLAW_IMAGE_GENERATE_URL=https://<your-image-api-domain>/api/v1?path=generate
# SOCICLAW_IMAGE_JOBS_URL=https://<your-image-api-domain>/api/v1/jobs/
# SOCICLAW_TOPUP_WAIT_TIMEOUT_SECONDS=120
# SOCICLAW_TOPUP_WAIT_INTERVAL_SECONDS=5

# Image input hardening (recommended defaults)
# SOCICLAW_ALLOWED_IMAGE_INPUT_DIRS=.sociclaw,.tmp
# Remote logo URL fallback is disabled by default. If you enable it, you must also set an allowlist:
# SOCICLAW_ALLOW_IMAGE_URL_INPUT=false
# SOCICLAW_ALLOWED_IMAGE_URL_HOSTS=example.com,*.examplecdn.com

# ===========================================
# Trello Integration (Optional)
# ===========================================
TRELLO_API_KEY=your_trello_api_key
TRELLO_TOKEN=your_trello_token
# TRELLO_BOARD_ID=optional_existing_board_id

# ===========================================
# Notion Integration (Optional)
# ===========================================
NOTION_API_KEY=your_notion_api_key
NOTION_DATABASE_ID=your_notion_database_id
